<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment"
    tools:context=".ui.detail.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingHorizontal="16dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:menu="@menu/action_menu"
            app:navigationIconTint="@color/white">

            <FrameLayout
                android:id="@+id/frameAppBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="start|center_vertical"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_back_arrow"
                    app:shapeAppearanceOverlay="@style/imageViewCircle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="34dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/detail"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btnSettings"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_bookmark_border_24"
                    app:shapeAppearanceOverlay="@style/imageViewCircle" />

            </FrameLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:minHeight="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummydaun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewImageView"
        tools:text="Nama Penyakit" />

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:text="Penaganan Penyakit : " />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/color_text_input"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="Akurat : 70%" />

    <TextView
        android:id="@+id/tvScore2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textAllCaps="false"
        android:textColor="@color/color_text_input"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName2"
        tools:text="Lorem ipsum dolor sit amet consectetur. Arcu eu sit auctor pulvinar non nibh. Nisl habitasse urna aliquam quis aliquet sit. Sed dictumst orci massa id nec fusce malesuada aliquam tellus. At sapien arcu tincidunt risus gravida consequat donec. Eget sed tincidunt erat amet ut dui hac eu. Turpis cras dolor in cursus in suspendisse orci fusce aliquet. Donec phasellus sapien enim scelerisque cursus ullamcorper. Porttitor tortor consectetur in cursus. Dolor a faucibus enim ipsum aliquam congue odio consectetur. Hendrerit aliquet eu dictumst dui tincidunt id. Leo aliquet placerat interdum augue ac eget. Pretium odio lacus tristique tempor ornare amet sit pellentesque. Quam odio iaculis dictum velit tortor suspendisse diam ornare fringilla. Purus eget mattis vitae nec gravida mattis. Accumsan consectetur ac porttitor nulla et dignissim sed ut. Massa lobortis placerat porta massa sed vestibulum turpis nunc. Mi id rhoncus blandit elit tincidunt velit sollicitudin non. Nec arcu sed tincidunt sit varius pharetra enim. Congue pharetra aliquet pellentesque est risus mattis. Donec ante eget congue nullam adipiscing cursus. Non rutrum integer pretium cras diam pharetra. Nam sit magna ullamcorper ac elit ut nunc fermentum velit. Orci quisque et facilisi ornare et amet tincidunt nisl." />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvScore" />


</androidx.constraintlayout.widget.ConstraintLayout>